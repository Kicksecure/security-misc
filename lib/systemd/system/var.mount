[Unit]
Description=Stricter mount options for /var
DefaultDependencies=no
ConditionPathExists=/var
ConditionPathExists=/etc/remount-secure
Before=sysinit.target

[Mount]
What=/var
Where=/var
## noexec breaks apt.
Options=bind,nosuid,nodev
